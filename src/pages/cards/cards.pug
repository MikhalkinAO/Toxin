extends ../../layouts/ui-kit-layout

include ../../components/signup-card/signup-card
include ../../components/signin-card/signin-card
include ../../components/calendar/calendar
include ../../components/room-card/room-card

block content
    +calendar()
    +signin-card({
        title: 'Войти',
        loginInput: {
            type: 'email',
            name: 'email',
            placeholder: 'Email',
            required: true,
            autocomplete: 'email',
            autofocus: true
        },
        passwordInput: {
          type: 'password',
          name: 'password',
          placeholder: 'Пароль',
          required: true,
          autocomplete: 'new-password'
        },
        buttonSignin: {
            title: 'войти',
            size: 'big',
            textColor: 'white',
            variantButton: 'fill',
            type: 'submit',
            isArrow: true
        },
        question: {
          text: 'Нет аккаунта на Toxin?',
          button: {
            title: 'создать',
            size: 'small',
            textColor: 'purple',
            variantButton: 'border',
            url: '#'
          }
        }
    })
    +signup-card({
      title: 'Регистрация аккаунта',
      name: {
        name: 'name',
        type: 'text',
        placeholder: 'Имя',
        required: true,
        autocomplete: 'name',
      },
      surname: {
        name: 'surname',
        type: 'text',
        placeholder: 'Фамилия',
        required: true,
        autocomplete: 'surname'
      },
      gender: {
        man: {
          name: 'gender',
          title: 'Мужчина',
          checked: true
        },
        woman: {
          name: 'gender',
          title: 'Женщина'
        }
      },
      birthday: {
        name: 'birthday',
        type: 'text',
        placeholder: 'ДД.ММ.ГГГГ',
        withMask: true,
        required: true,
        autocomplete: 'bday'
      },
      email: {
        name: 'email',
        type: 'email',
        placeholder: 'Email',
        required: true,
        autocomplete: 'email'
      },
      password: {
        name: 'password',
        type: 'password',
        placeholder: 'Пароль',
        required: true,
        autocomplete: 'current-password'
      },
      special: {
        name: 'special',
        title: 'Получать спецпредложения'
      },
      submit: {
        title: 'перейти к оплате',
        size: 'big',
        textColor: 'white',
        variantButton: 'fill',
        type: 'submit',
        isArrow: true
      },
      question: {
        text: 'Уже есть аккаунт на Toxin',
        button: {
          title: 'войти',
          size: 'small',
          textColor: 'purple',
          variantButton: 'border',
          url: '#'
        }
      }
    })
    +room-card({
      images: ["room-888-1.jpg", "room-888-2.jpg", "room-888-3.jpg"],
      numberRoom: {
        prefix: '№',
        value: '888',
        class: 'люкс'
      },
      priceRoom: {
        value: '9 990₽',
        text: 'в сутки'
      },
      rating: '5',
      countReviews: {
        value: '145',
        text: 'Отзывов'
      }
    })
    +room-card({
      images: ["room-840-1.jpg", "room-840-2.jpg"],
      numberRoom: {
        prefix: '№',
        value: '840'
      },
      priceRoom: {
        value: '9 990₽',
        text: 'в сутки'
      },
      rating: '4',
      countReviews: {
        value: '65',
        text: 'Отзывов'
      }
    })

